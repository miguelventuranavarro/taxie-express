<div class="jumbotron">
       
        <style>
          body {
          background-color: gold;
               }
        </style>
        </body>


<div class="container">
  <div class="row">
    <div class="col-md-12">


            <table class="table table-striped">
              <thead>
                <tr>
                <th>Codigo de Reserva</th>
                  <th>Tipo de Reserva</th>
                  <th>Direcion de origen</th>
                  <th>Direcion de destino</th>
                  <th>Precio</th>
                  <th>Estado</th>
                  <th></th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>

              <tbody>
                <% @reservations.each do |reservation| %>
                  <tr>
                  <td><%= reservation.code%></td>
                    <td><%= reservation.reservation_type.name%></td>
                    <td><%= reservation.address_o+ " , " +reservation.district_o.name + " Referencia: "+reservation.ref_o %></td>
                    <td><%= reservation.address_d+ " , " +reservation.district_d.name + " Referencia: "+reservation.ref_d %></td>
                    <td><%= "S/. "+reservation.price.to_s %></td>
                    <td><%= reservation.reservation_status.name %></td>
                    <td><%= link_to 'Ver Detalle', reservation %></td>

                    
                    <% if current_user.user_type_id == 1 and reservation.feedback == nil%>
                    <td><%= link_to 'Dejar Feedback', reservations_feedback_path(reservation) %></td>
                    <% elsif current_user.user_type_id == 1 and reservation.feedback != nil %>
                    <td></td>

                    <% end %>
                   

                  </tr>
                <% end %>
              </tbody>
            </table>


            <%= link_to "Regresar a MiCuenta", :back %>

