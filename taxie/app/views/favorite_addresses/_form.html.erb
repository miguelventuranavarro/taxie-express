<%= semantic_form_for @favorite_address do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :ref %>
    <%= f.input :district %>
    <%= f.input :zone %>
    <%= f.input :user %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
